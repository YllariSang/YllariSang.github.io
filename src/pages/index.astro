    </section>

    <section id="projects" class="projects animate-on-scroll">
      <h2>Creations</h2>
      <div class="project-list">
        <ProjectCard
          title="Crescere | My First Game"
          description="A cool game I made with Godot for a school project. It features a 2D size based platformer"
          image="https://img.itch.zone/aW1nLzI0NTU1MDg4LnBuZw==/original/ewjfY3.png"
          link="https://yllaris.itch.io/crescere"
          tags={["Godot", "Aseprite"]}
        />
        <ProjectCard
          title="3D Donut"
          description="The canon event of every 3D artist, the fabled and glorious donut."
          image={donutImage}
          link="https://skfb.ly/pFXLv"
          tags={["Blender"]}
        />
        <ProjectCard
          title="Portfolio Website"
          description="The very website you are looking at now, built with Astro and a lot of love."
          image="https://picsum.photos/seed/project3/400/225"
          link="#shake"
          tags={["Astro", "JavaScript", "CSS"]}
        />
        <ProjectCard
          title="Stylized Chest"
          description="Stylized chest model created in Blender for a school activity."
          image={chestImage}
          link="https://skfb.ly/pFXKO"
          tags={["Blender", "3D Modeling"]}
        />
      </div>
    </section>

    <section id="contact" class="contact animate-on-scroll">
      <h2>Get in Touch</h2>
      <p>
        I'm always open to discussing new projects or opportunities. I would be
        happy for you to reach out!
      </p>
      <div class="contact-links">
        <a
          href="https://mail.google.com/mail/?view=cm&fs=1&to=yllaris1004@gmail.com"
          class="email-link"
          target="_blank"
          rel="noopener noreferrer"
        >
          yllaris1004@gmail.com
        </a>
        <a href="/CV.pdf" class="resume-button" download>
          Download My Resume
        </a>
        <div class="social-icons">
          <a
            href="https://github.com/YllariSang"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub Profile"
            data-info-text="Check out my code on GitHub!"
          >
            <Image
              src="https://cdn.simpleicons.org/github/ffffff"
              alt="GitHub Icon"
              width={32}
              height={32}
            />
          </a>
          <a
            href="https://www.linkedin.com/in/shawn-m-cruz/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn Profile"
            data-info-text="Connect with me on LinkedIn!"
          >
            <Image
              src="https://upload.wikimedia.org/wikipedia/commons/thumb/c/ca/LinkedIn_logo_initials.png/960px-LinkedIn_logo_initials.png"
              alt="LinkedIn Icon"
              width={32}
              height={32}
            />
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  main {
    padding: 2rem;
    max-width: 1200px;
    margin: auto;
  }
  section {
    padding: 4rem 2rem;
    margin-bottom: 2rem;
    border-radius: 1rem;
    text-align: center;
    scroll-margin-top: 5rem;
  }
  .hero {
    background-color: rgba(22, 27, 34, 0.5);
  }
  .hero h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #f0f6fc;
  }
  .emphasized-name {
    color: #22c55e;
    text-shadow: 0 0 10px rgba(34, 197, 94, 0.6);
    cursor: help;
    transition: color 0.2s ease;
  }
  .about {
    background-color: rgba(22, 27, 34, 0.5);
  }
  .projects {
    background-color: rgba(22, 27, 34, 0.5);
  }
  .contact {
    background-color: rgba(22, 27, 34, 0.5);
    text-align: center;
  }
  .contact-links {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    gap: 2rem;
    margin-top: 2rem;
  }
  .contact-links .email-link,
  .contact-links .resume-button {
    color: #f0f6fc;
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 700;
    padding: 0.5rem 1.5rem;
    border: 1px solid #22c55e;
    border-radius: 0.5rem;
    transition:
      background-color 0.2s ease,
      color 0.2s ease;
  }
  .contact-links .email-link:hover,
  .contact-links .resume-button:hover {
    background-color: #22c55e;
  }
  .social-icons {
    display: flex;
    gap: 2rem;
  }
  .social-icons a {
    transition: transform 0.2s ease;
  }
  .social-icons a:hover {
    transform: scale(1.15);
  }
  .project-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }
  .skills {
    background-color: rgba(22, 27, 34, 0.5);
  }
  .skill-list {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
    margin-top: 2rem;
    align-items: flex-start;
  }
  .skills h3 {
    font-size: 1.5rem;
    color: #a5b0bb;
    margin-top: 3rem;
    margin-bottom: 1rem;
    border-bottom: 1px solid rgba(165, 176, 187, 0.3);
    padding-bottom: 0.5rem;
    display: inline-block;
  }
  .skill-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    width: 100px;
    text-align: center;
    padding: 1rem 0.5rem;
    border-radius: 0.75rem;
    transition:
      transform 0.2s ease-out,
      background-color 0.2s ease-out,
      box-shadow 0.2s ease-out;
  }
  .skill-item img {
    transition: transform 0.2s ease;
  }
  .skill-item:hover {
    transform: translateY(-10px);
    background-color: rgba(36, 43, 53, 0.7);
    box-shadow: 0 15px 25px rgba(0, 0, 0, 0.3);
  }
  h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: #f0f6fc;
  }
  p {
    max-width: 60ch;
    margin: 0 auto;
    line-height: 1.6;
  }

  .animate-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    transition:
      opacity 0.6s ease-out,
      transform 0.6s ease-out;
  }

  .animate-on-scroll.visible {
    opacity: 1;
    transform: translateY(0);
  }
  .subtitle {
    min-height: 1.6em;
  }
  .typed-cursor {
    color: #a5b0bb;
    font-weight: 300;
  }

  @keyframes screen-shake {
    0%,
    100% {
      transform: translate(0, 0);
    }
    10%,
    30%,
    50%,
    70%,
    90% {
      transform: translate(-1px, 1px);
    }
    20%,
    40%,
    60%,
    80% {
      transform: translate(1px, -1px);
    }
  }

  main.shake {
    animation: screen-shake 0.3s cubic-bezier(0.36, 0.07, 0.19, 0.97);
  }
</style>

<script>
  document.addEventListener("astro:page-load", function () {
    if (typeof Typed !== "undefined") {
      new Typed("#typed-subtitle", {
        strings: [
          "I love Game Development",
          "Open Source is the GOAT",
          "2D/3D Artist",
          "Creative Coder",
          "Web Developer",
          "Full-Stack Enthusiast",
          "Learner for Life",
        ],
        typeSpeed: 50,
        backSpeed: 30,
        backDelay: 2000,
        loop: true,
      });
    }

    const shakeLink = document.querySelector('a.card[href="#shake"]');
    const mainElement = document.querySelector("main");

    shakeLink?.addEventListener("click", (e) => {
      e.preventDefault();
      if (mainElement && !mainElement.classList.contains("shake")) {
        mainElement.classList.add("shake");
      }
    });

    mainElement?.addEventListener("animationend", () => {
      if (mainElement.classList.contains("shake")) {
        mainElement.classList.remove("shake");
      }
    });
  });
</script>
