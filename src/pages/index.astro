---
import Layout from "../layouts/Layout.astro";
import InteractiveButton from "../components/InteractiveButton.astro";
import { Image } from "astro:assets";
import ProjectCard from "../components/ProjectCard.astro";
import donutImage from "../assets/donut.png";
import chestImage from "../assets/stylized-chest.png";
---

<Layout>
  <main>
    <section class="hero">
      <h1>
        Shawn Ashleigh <span
          class="emphasized-name"
          title="I really like this name">Yllaris</span
        > M. Cruz
      </h1>
      <p class="subtitle"><span id="typed-subtitle"></span></p>
      <InteractiveButton />
    </section>

    <section id="about" class="about animate-on-scroll">
      <h2>About Me</h2>
      <p>
        I am a passionate IT Student with experience in Game Development, Web
        Development, Full-Stack, Networking, etc. I love learning new
        technologies and improving my skills. I believe in the power of open
        source and community collaboration to drive innovation and growth.
      </p>
    </section>

    <section id="skills" class="skills animate-on-scroll">
      <h2>Skill Tree</h2>

      <h3>Good</h3>
      <div class="skill-list">
        <div
          class="skill-item"
          data-info-text="Godot is my go-to open-source game engine for games."
        >
          <Image
            src="https://cdn.simpleicons.org/godotengine/478cbf"
            alt="Godot Engine"
            width={64}
            height={64}
          />
          <span>Godot</span>
        </div>
        <div
          class="skill-item"
          data-info-text="Blender, I use this for creating 3D models and assets!"
        >
          <Image
            src="https://cdn.simpleicons.org/blender/f5792a"
            alt="Blender"
            width={64}
            height={64}
          />
          <span>Blender</span>
        </div>
        <div
          class="skill-item"
          data-info-text="HTML5 the backbone of all my web projects."
        >
          <Image
            src="https://cdn.simpleicons.org/html5/e34f26"
            alt="HTML5"
            width={64}
            height={64}
          />
          <span>HTML</span>
        </div>
        <div
          class="skill-item"
          data-info-text="Aseprite is one of the best 2D art software I use!"
        >
          <Image
            src="https://cdn.simpleicons.org/aseprite/ffffff"
            alt="Aseprite"
            width={64}
            height={64}
          />
          <span>Aseprite</span>
        </div>
        <div
          class="skill-item"
          data-info-text="VS Code is my favorite and GOATed IDE."
        >
          <Image
            src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/9a/Visual_Studio_Code_1.35_icon.svg/3840px-Visual_Studio_Code_1.35_icon.svg.png"
            alt="Visual Studio Code"
            width={64}
            height={64}
          />
          <span>VS Code</span>
        </div>
        <div
          class="skill-item"
          data-info-text="GitHub is where I host and share my code repositories. Time to GitGud!"
        >
          <Image
            src="https://cdn.simpleicons.org/github/ffffff"
            alt="GitHub"
            width={64}
            height={64}
          />
          <span>GitHub</span>
        </div>
        <div class="skill-item">
          <Image
            src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT44dqy5y0MB8oIpT0PNd8qHCW9GJ09bQyTQw&s"
            alt="Microsoft Office"
            width={64}
            height={64}
          />
          <span>Office Suite</span>
        </div>
        <div
          class="skill-item"
          data-info-text="Canva is my go-to for quick and good looking designs."
        >
          <Image
            src="https://logo-teka.com/wp-content/uploads/2025/09/canva-icon-logo.png"
            alt="Canva"
            width={64}
            height={64}
          />
          <span>Canva</span>
        </div>
      </div>

      <h3>Decent</h3>
      <div class="skill-list">
        <div
          class="skill-item"
          data-info-text="GameMaker is great for 2D games and rapid prototyping. Undertale and various games inspired me to try this engine."
        >
          <Image
            src="https://cdn.simpleicons.org/gamemaker/ffffff"
            alt="GameMaker"
            width={64}
            height={64}
          />
          <span>GameMaker</span>
        </div>
        <div class="skill-item">
          <Image
            src="https://cdn.simpleicons.org/php/777bb4"
            alt="PHP"
            width={64}
            height={64}
          />
          <span>PHP</span>
        </div>
        <div
          class="skill-item"
          data-info-text="Node.js great for building scalable network applications."
        >
          <Image
            src="https://cdn.simpleicons.org/nodedotjs/339933"
            alt="Node.js"
            width={64}
